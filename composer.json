{
  "name": "optimiscrime/modxc",
  "description": "Run certain MODX tasks from the command line",
  "license": "MIT",
  "require": {
    "php": ">=5.4",
    "alchemy/zippy": "^0.4.5",
    "symfony/filesystem": "^3.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5",
    "phpunit/phpunit": "^5.2",
    "satooshi/php-coveralls": "^1.0",
    "phpmd/phpmd": "^2.4"
  },
  "autoload": {
    "psr-4": {
      "Modxc\\": "src/Modxc"
    }
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs",
      "@phpmd"
    ],
    "phpunit": "php vendor/bin/phpunit",
    "phpcs": "php vendor/bin/phpcs",
    "phpmd": "php vendor/bin/phpmd"
  },
  "bin": ["bin/modxc"]
}
